extends ./play_layout.jade

block content  

  header#top
    h1 
      span(id='node-title')
    nav(role='navigation')
      button(type='button', data-menu='help', class='help-btn')
        span.sr-only Hilfe zum Spiel
      button(type='button', class='fullscreen-toggle')
        span.sr-only Toggle fullscreen
      button(type='button', class='navbar-toggle')
        span.sr-only Toggle navigation
      ul
        li
          b(data-menu='help') How to play
        li
          b(data-menu='rename') Choose a different name
        li
          b(data-menu='restart') Restart this node
        li
          b(id='manage-link') Node management area
        li
          a(id='edit-link' target='_blank') Edit this node
        li
          b(id='embed-link') Embed this node

  div#chat
    section
      p
        span(id='action-log-link' data-limit='') see what happened here earlier
      div(id='action-log')
    p(id='input')
      span(id='input-fake')
        i(id='cursor')
      input(type='text', id='input-command', autocomplete='off')
